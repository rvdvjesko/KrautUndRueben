use krautundrueben
CREATE ROLE read_edit_zutat_rezept;

GRANT SELECT, INSERT, DELETE ON krautundrueben.zutat
TO read_edit_zutat_rezept;

GRANT SELECT, INSERT, DELETE ON krautundrueben.zutat_enthält_ernährungskategorie
TO read_edit_zutat_rezept;

GRANT SELECT, INSERT, DELETE ON krautundrueben.zutat_enthält_beschränkung
TO read_edit_zutat_rezept;

GRANT SELECT, INSERT, DELETE ON krautundrueben.rezept_enthält_zutat
TO read_edit_zutat_rezept;

GRANT SELECT, INSERT, DELETE ON krautundrueben.rezept
TO read_edit_zutat_rezept;

GRANT SELECT, INSERT, DELETE ON krautundrueben.rezept_enthält_ernährungskategorie
TO read_edit_zutat_rezept;

GRANT SELECT, INSERT, DELETE ON krautundrueben.rezept_enthält_beschränkung
TO read_edit_zutat_rezept;

CREATE ROLE IF NOT EXISTS admin_all_tables;
GRANT ALL PRIVILEGES ON krautundrueben TO admin_all_tables;

CREATE role read_edit_;
GRANT select, insert, DELETE ON krautundrueben.kunde TO read_edit_kunde;

CREATE role read_all_tables;
GRANT SELECT ON krautundrueben.* TO read_all_tables;

CREATE USER IF NOT EXISTS 'Horst'@'localhost' IDENTIFIED BY 'adminsbraucheneinstarkespasswort!';
CREATE USER IF NOT EXISTS 'Ernst'@'localhost' IDENTIFIED BY 'Kundenserviceistwichtig;)';
CREATE USER IF NOT EXISTS 'Gertrud'@'localhost' IDENTIFIED BY 'büch3rwurm';
CREATE USER IF NOT EXISTS 'Marianne'@'localhost' IDENTIFIED BY 'FachkraftfürLagerlogistikundVerwaltung';

GRANT 'admin_all_tables' TO 'Horst'@'localhost';
GRANT 'read_edit_kunde' TO 'Ernst'@'localhost';
GRANT 'read_all_tables' TO 'Gertrud'@'localhost';
GRANT 'read_edit_zutat_rezept' TO 'Marianne'@'localhost';
SET DEFAULT ROLE ALL TO 
	'Horst'@'localhost',
	'Ernst'@'localhost',
	'Gertrud'@'localhost',
	'Marianne'@'localhost';
